@model Rozgar.Models.JobDetailViewModel
@{
    ViewBag.Title = "Details";
}

<!-- JOB DETAILS START -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h4 class="text-dark mb-3">@Model.Job.Title</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-7">
                <div class="job-detail border rounded p-4">
                    <div class="job-detail-content">
                        <div class="job-detail-com-desc overflow-hidden d-block">
                            <h4 class="mb-2"><a href="#" class="text-dark">@Model.Job.Title</a></h4>
                            <p class="text-muted mb-0"><i class="mdi mdi-link-variant mr-2"></i>@Model.Job.Client.Name</p>
                            <p class="text-muted mb-0"><i class="mdi mdi-link-variant mr-2"></i>@Model.Job.Budget</p>
                            <p class="text-muted mb-0"><i class="mdi mdi-link-variant mr-2"></i>@Model.Job.ExperienceLevel</p>
                        </div>
                    </div>

                    <div class="job-detail-desc mt-4">
                        <p class="text-muted mb-3">@Model.Job.Description</p>
                    </div>
                </div>



                <div class="row">
                    <div class="col-lg-12">
                        <h5 class="text-dark mt-4">Skills</h5>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="job-detail border rounded mt-2 p-4">
                            <div class="job-detail-desc">
                                @foreach (var item in Model.Skills)
                                {
                                    <div class="job-details-desc-item">
                                        <div class="float-left mr-3">
                                            <i class="mdi mdi-send text-primary"></i>
                                        </div>
                                        <p class="text-muted mb-2">@item</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-5 mt-4 mt-sm-0">
                <div class="job-detail border rounded mt-4">
                    <a href="#" class="btn btn-primary btn-block">Apply For Job</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- JOB DETAILS END -->
